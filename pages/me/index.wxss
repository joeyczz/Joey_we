/**index.wxss**/
.userinfo {
   width:100%;
   height:350rpx;
   display: flex;
   flex-direction: column;
   align-items: center;
   background-color: #3cc51f;
}

.userinfo-avatar {
   width: 128rpx;
   height: 128rpx;
   margin: 50rpx 20rpx 20rpx;
   border-radius: 50%;
}

.userinfo-nickname {
   color: #aaa;
}

.usersetting {
   flex: 1;
   width:100%;
}

.setting-list {
   background-color:#FFFFFF;
}

.setting-list-item {
   background-color: #FFFFFF;
   border-radius: 4rpx;
   overflow: hidden;
   margin-left: 20rpx;
   border-bottom: 1rpx solid #efefef;
}

.setting-list-item-body {
   padding: 30rpx;
   display: flex;
   align-items: center;
}

.setting-list-text {
   flex: 1;
}

.developer {
   color: #999999;
   font-size: 26rpx;
}

